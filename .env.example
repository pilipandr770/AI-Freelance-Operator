# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_freelance_operator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_freelance_operator
DB_USER=postgres
DB_PASSWORD=your_db_password

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Email Configuration (Gmail IMAP)
MAIL_HOST=imap.gmail.com
MAIL_PORT=993
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_USE_SSL=True
MAIL_CHECK_INTERVAL=300

# SMTP Configuration (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_USE_TLS=True

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_OWNER_ID=your_telegram_user_id

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# System Settings
HOURLY_RATE=50.0
AUTO_NEGOTIATION_ENABLED=True
AUTO_INVOICE_ENABLED=True
PREPAYMENT_PERCENTAGE=50

# Agent Settings
SCAM_FILTER_THRESHOLD=0.7
MIN_PROJECT_BUDGET=100
MAX_PROJECT_BUDGET=50000